{
  "version": 2,
  "name": "l7s-deal-intake",
  "builds": [
    {
      "src": "frontend/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/discovery",
      "dest": "/frontend/discovery-form.html"
    },
    {
      "src": "/deals",
      "dest": "/frontend/deal-viewer.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "ASANA_ACCESS_TOKEN": "@asana_access_token",
    "ASANA_WORKSPACE_ID": "@asana_workspace_id",
    "ASANA_TEAM_ID": "@asana_team_id"
  }
}