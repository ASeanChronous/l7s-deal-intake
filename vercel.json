{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/discovery",
      "dest": "/frontend/discovery-form.html"
    },
    {
      "src": "/deals",
      "dest": "/frontend/deal-viewer.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}
